{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "skipLibCheck": true,
        "types": [
            "reflect-metadata", "node", "mocha"
        ],
        "noImplicitAny": false,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "noImplicitReturns": false,
        "declaration": true,
        "pretty": true,
        "strict": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"        
    }
}